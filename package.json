{
  "name": "sip-assistant",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev:frontend": "vite",
    "dev:backend": "cross-env NODE_ENV=development node src/chatbot.js",
    "build:frontend": "vite build",
    "preview": "vite preview",
    "start:backend": "cross-env NODE_ENV=production node src/chatbot.js",
    "start": "npm run start:backend",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "lint": "eslint --ext .js,.vue src/",
    "lint:fix": "eslint --ext .js,.vue src/ --fix",
    "format": "prettier --write \"src/**/*.{js,vue,css,scss}\"",
    "format:check": "prettier --check \"src/**/*.{js,vue,css,scss}\"",
    "test": "vitest",
    "test:watch": "jest --watch",
    "test:coverage": "vitest run --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.36.3",
    "axios": "^1.7.9",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "debug": "^4.4.0",
    "dompurify": "^3.0.11",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.0.0",
    "marked": "^11.2.0",
    "openai": "^4.85.1",
    "prismjs": "^1.29.0",
    "readline": "^1.3.0",
    "vue": "^3.4.15"
  },
  "devDependencies": {
    "@babel/core": "^7.26.9",
    "@babel/preset-env": "^7.26.9",
    "@testing-library/vue": "^8.1.0",
    "@vitejs/plugin-vue": "^5.0.3",
    "@vitest/coverage-v8": "^3.0.5",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/vue3-jest": "^29.2.6",
    "babel-jest": "^29.7.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-vue": "^9.32.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^26.0.0",
    "nock": "^14.0.1",
    "prettier": "^3.5.1",
    "supertest": "^7.0.0",
    "vite": "^6.2.0",
    "vitest": "^3.0.5"
  }
}
